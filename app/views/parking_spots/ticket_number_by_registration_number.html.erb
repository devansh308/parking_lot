<div class="container mt-4">
  <h1>Ticket Number by Registration Number</h1>
  <%= form_with url: ticket_number_by_registration_number_path, method: :get, class: "mt-3" do |f| %>
    <div class="form-group">
      <%= f.label :registration_number, "Registration Number" %>
      <%= f.text_field :registration_number, class: "form-control" %>
    </div>
    <br>
    <%= f.submit "Search", class: "btn btn-primary" %>
  <% end %>
  <% if @ticket_number.present? %>
    <div class="mt-3">
      <p>Ticket Number: <%= @ticket_number %></p>
    </div>
  <% end %>
</div>
